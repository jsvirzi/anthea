<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mam.lambo.Distraction">

    <LinearLayout
        android:layout_width="560sp"
        android:layout_height="330sp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/displayArea"
            android:layout_width="580sp"
            android:layout_height="280sp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="240sp"
                android:layout_height="280sp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="180sp">

                    <RelativeLayout
                        android:layout_width="240sp"
                        android:layout_height="180sp">

                        <com.mam.lambo.CustomSurfaceView
                            android:id="@+id/externalOverlay"
                            android:layout_width="240sp"
                            android:layout_height="180sp"
                            android:layout_alignParentLeft="true"
                            />

                        <SurfaceView
                            android:id="@+id/externalSurfaceView"
                            android:layout_width="240sp"
                            android:layout_height="180sp"
                            android:layout_alignParentLeft="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="25sp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="display"
                        android:id="@+id/externalDisplay"
                        android:checked="true"
                        />

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="h264"
                        android:id="@+id/externalEncodeH264"
                        android:checked="false"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="25sp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="dnn"
                        android:id="@+id/externalDnn"
                        android:checked="false"
                        />

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="1080p"
                        android:id="@+id/externalHd"
                        android:checked="true"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="25sp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="enable"
                        android:id="@+id/videoSourceExternal"
                        android:checked="true"
                        />

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="unwarp"
                        android:id="@+id/externalUnwarp"
                        android:checked="false"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="240sp"
                android:layout_height="280sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="180sp">

                    <RelativeLayout
                        android:layout_width="240sp"
                        android:layout_height="180sp">

                        <com.mam.lambo.CustomSurfaceView
                            android:id="@+id/internalOverlay"
                            android:layout_width="240sp"
                            android:layout_height="180sp"
                            android:layout_alignParentLeft="true"
                            />

                        <SurfaceView
                            android:id="@+id/internalSurfaceView"
                            android:layout_width="240sp"
                            android:layout_height="180sp"
                            android:layout_alignParentLeft="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="25sp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="display"
                        android:id="@+id/internalDisplay"
                        android:checked="true"
                        />

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="h264"
                        android:id="@+id/internalEncodeH264"
                        android:checked="false"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="25sp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="dnn"
                        android:id="@+id/internalDnn"
                        android:checked="false"
                        />

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="1080p"
                        android:id="@+id/internalHd"
                        android:checked="true"
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="25sp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="enable"
                        android:id="@+id/videoSourceInternal"
                        android:checked="true"
                        />

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="unwarp"
                        android:id="@+id/internalUnwarp"
                        android:checked="false"
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240sp"
                    android:layout_height="25sp">

                    <CheckBox
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:text="face"
                        android:id="@+id/useQtiFace"
                        android:checked="false"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="120sp"
                android:layout_height="300sp"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="110sp"
                    android:layout_height="25sp"
                    android:text="AE/AF"
                    android:id="@+id/autoExposureFocus"
                    android:checked="false"
                    />

                <CheckBox
                    android:layout_width="110sp"
                    android:layout_height="25sp"
                    android:text="record"
                    android:id="@+id/record"
                    android:checked="true"
                    />

                <CheckBox
                    android:layout_width="110sp"
                    android:layout_height="25sp"
                    android:text="OSI"
                    android:id="@+id/opticalStabilization"
                    android:checked="false"
                    />

                <!--<CheckBox-->
                    <!--android:layout_width="110sp"-->
                    <!--android:layout_height="25sp"-->
                    <!--android:text="imu"-->
                    <!--android:id="@+id/imu"-->
                    <!--android:checked="false"-->
                    <!--/>-->

                <CheckBox
                    android:layout_width="110sp"
                    android:layout_height="25sp"
                    android:text="snapshot"
                    android:id="@+id/snapshot"
                    android:checked="false"
                    />

                <CheckBox
                    android:layout_width="110sp"
                    android:layout_height="25sp"
                    android:text="fast imu"
                    android:id="@+id/fastImu"
                    android:checked="true"
                    />

                <Button
                    android:layout_width="110sp"
                    android:layout_height="35sp"
                    android:text="start ext"
                    android:id="@+id/startExternal"
                    />

                <Button
                    android:layout_width="110sp"
                    android:layout_height="35sp"
                    android:text="start int"
                    android:id="@+id/startInternal"
                    />

                <Button
                    android:layout_width="110sp"
                    android:layout_height="35sp"
                    android:text="start imu"
                    android:id="@+id/startImu"
                    />

                <Button
                    android:layout_width="80sp"
                    android:layout_height="35sp"
                    android:text="exit"
                    android:id="@+id/exit"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:id="@+id/status1"
                        />

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:id="@+id/status2"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="480sp"
            android:layout_height="60sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/text1"
                android:text="Hello"
                android:layout_marginTop="5sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/text2"
                android:text="Hello"
                android:layout_marginTop="5sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
