<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nauto.CreateTestVectors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="448dp"
            android:layout_height="336dp">

            <RelativeLayout
                android:layout_width="448dp"
                android:layout_height="336dp">

                <com.mam.lambo.CustomSurfaceView
                    android:id="@+id/externalOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    />

                <SurfaceView
                    android:id="@+id/externalSurfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/displayArea"
            android:layout_width="120dp"
            android:layout_height="336dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="120dp"
                android:orientation="vertical"
                android:layout_height="336dp">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:text="1920x1080"
                    android:id="@+id/hd"
                    android:checked="true"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:text="reverse image"
                    android:id="@+id/reverseImage"
                    android:checked="false"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:text="external"
                    android:id="@+id/externalDisplay"
                    android:checked="true"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:text="vehicle"
                    android:id="@+id/vehicle"
                    android:checked="true"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:text="reprocess"
                    android:id="@+id/reprocess"
                    android:checked="false"
                    />

                <Button
                    android:text="start"
                    android:id="@+id/start"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"/>

                <!--<Button-->
                    <!--android:text="snap"-->
                    <!--android:id="@+id/snapshot"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:layout_width="match_parent"/>-->

                <Button
                    android:text="file"
                    android:id="@+id/file"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"/>

                <Button
                    android:text="directory"
                    android:id="@+id/directory"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"/>

                <Button
                    android:text="exit"
                    android:id="@+id/exit"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageView"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
